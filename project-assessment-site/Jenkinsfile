
pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    service_name: main-service
    service_type: REST
spec:
  containers:
  - name: dnd
    image: docker:latest
    command: 
    - cat
    tty: true
    volumeMounts: 
    - mountPath: /var/run/docker.sock
      name: docker-sock
  - name: kubectl
    image: bryandollery/terraform-packer-aws-alpine
    command:
    - cat
    tty: true
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock  
      type: Socket
"""
    }
  }
  environment {
    CREDS = credentials('sara_docker')
    DOCKER_NAMESPACE = 'saloyiana'
    SERVICE_NAME = 'main-service'
    TOKEN=credentials('7fa73232-c698-4e62-b6e3-28c733e1bf09')
}
  stages {
      stage("Build") {
          steps {
              container('dnd') {
                  sh '''
                      cd project-assessment-site/
                      docker build --tag $DOCKER_NAMESPACE/$SERVICE_NAME .
                  '''
              }
          }
      }
      stage("Release") {
          steps {
              container('dnd') {
                  sh '''
                      docker login -p $CREDS_PSW -u $CREDS_USR
                      docker push $DOCKER_NAMESPACE/$SERVICE_NAME
                  '''
              }
          }
      }
      stage("Deploy") {
          steps {
              container('kubectl') {
                  sh '''
                      cd project-assessment-site/
                      kubectl --token=$TOKEN -n test get all
                      kubectl --token=$TOKEN -n test apply -f deploy.yaml
                      cd ..
                      cd ingress/
                      kubectl --token=$TOKEN -n test apply -f ingress.yaml
                  '''
              }
          }
      }
  }
}
